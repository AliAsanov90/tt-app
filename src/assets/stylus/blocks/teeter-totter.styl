.teeter-totter
  display: flex
  flex-direction: column
  align-items: center

  &__board
    position: relative
    display: flex
    width: 100%
    background-color: red
    transition-timing-function: ease-in-out

  &__beam
    width: 0
    height: 0
    border-left: 3rem solid transparent
    border-right: 3rem solid transparent
    border-bottom: 8rem solid black
